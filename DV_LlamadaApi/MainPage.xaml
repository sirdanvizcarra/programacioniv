<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DV_LlamadaApi.MainPage">
    <StackLayout>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Entry Grid.Column="0" Grid.Row="0" x:Name="latitud" Placeholder="latitud"/>
            <Entry Grid.Column="1" Grid.Row="0" x:Name="longitud" Placeholder="longitud"/>
    </Grid>
    <VerticalStackLayout>
            <Button x:Name="btnApi" Text="API" Clicked="LlamarApi"/>
            <Label x:Name="EstadoClima" Text="Estado de clima" HorizontalOptions="Center"/>
            <Label x:Name="Pais" Text="Pais" HorizontalOptions="Center"/>
            <Label x:Name="Ciudad" Text="Ciudad" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>
